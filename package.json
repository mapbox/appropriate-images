{
  "name": "@mapbox/appropriate-images",
  "version": "2.0.0",
  "description": "Get appropriately sized images into your website.",
  "main": "index.js",
  "scripts": {
    "precommit": "lint-staged",
    "format": "prettier --single-quote --write '{,lib/**/,browser/**/,test/**/}*.js'",
    "lint": "eslint .",
    "test-jest": "jest",
    "pretest": "npm run lint",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mapbox/appropriate-images.git"
  },
  "keywords": [
    "images",
    "responsive",
    "responsive-images",
    "resize",
    "react"
  ],
  "author": "Mapbox",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mapbox/appropriate-images/issues"
  },
  "homepage": "https://github.com/mapbox/appropriate-images#readme",
  "engines": {
    "node": ">=4"
  },
  "dependencies": {
    "chalk": "^1.1.3",
    "del": "^3.0.0",
    "fasterror": "^1.1.0",
    "imagemin": "^5.3.1",
    "imagemin-mozjpeg": "^8.0.0",
    "imagemin-pngquant": "^8.0.0",
    "imagemin-webp": "^5.1.0",
    "lodash": "^4.17.11",
    "meow": "^3.7.0",
    "mkdirp": "^0.5.1",
    "p-finally": "^1.0.0",
    "pify": "^3.0.0",
    "sharp": "^0.21.3",
    "tempy": "^0.1.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.7.0",
    "@babel/core": "^7.7.2",
    "@babel/preset-env": "^7.7.1",
    "@babel/preset-react": "^7.7.0",
    "eslint": "^4.19.1",
    "eslint-plugin-node": "^5.2.1",
    "husky": "^0.14.1",
    "jest": "^24.9.0",
    "lint-staged": "^4.3.0",
    "prettier": "^1.16.4"
  },
  "lint-staged": {
    "**/*.js": [
      "eslint",
      "prettier --single-quote --write",
      "git add"
    ]
  },
  "jest": {
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "html"
    ],
    "clearMocks": true
  }
}
